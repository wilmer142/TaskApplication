<div class="row">
	<div class="col-md-6">
		<%= form_for @task do |f| %>
			<% if @task.errors.any? %>
				<div id="errors">
					<h2>Se han producido los siguientes errores:</h2>
					<ul>
						<% @task.errors.full_messages.each do |error| %>
							<li><%= error %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="form-group">
				<%= f.label :description %> <br>
				<%= f.text_field :description, class: "form-control" %><br>
			</div>

			<div class="form-group">
				<%= f.submit "#{@button} Tarea", class: "btn btn-primary" %>
			</div>
			
		<% end %>
	</div>
</div>
 
